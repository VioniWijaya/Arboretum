<!DOCTYPE html>
<html lang="id">
  <%- include('headerView') %>
  <body class="min-h-screen flex-col bg-gray-100">
    <main class="flex-grow justify-center items-center p-6">
      <div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-6">
        <h1 class="text-2xl font-bold text-center text-gray-800 mb-4">
          Detail Tanaman
        </h1>
        <div class="space-y-4">
          <% if (tanaman.foto) { %>
          <div class="flex justify-center items-center">
            <ul>
              <img
                src="<%= tanaman.foto %>"
                alt="<%= tanaman.nama %>"
                class="w-70 h-auto object-cover mt-2 flex justify-center items-center"
              />
              <p class="opacity-50 italic flex justify-center">Foto Tanaman</p>
            </ul>
          </div>
          <% } %>
          <div>
            <h3 class="font-bold" class="font-bold">Nama</h3>
            <p><%= tanaman.nama %></p>
          </div>
          <div>
            <h3 class="font-bold">Nama Lokal</h3>
            <p><%= tanaman.nama_lokal %></p>
          </div>
          <div>
            <h3 class="font-bold">Nama Latin</h3>
            <p class="italic"><%= tanaman.nama_latin %></p>
          </div>
          <div>
            <h3 class="font-bold">Famili</h3>
            <p><%= tanaman.famili %></p>
          </div>
          <div>
            <h3 class="font-bold">Deskripsi</h3>
            <p class="whitespace-pre-line leading-relaxed"><%= tanaman.deskripsi %></p>
          </div>
        </div>
      </div>
    </main>
    <%- include('footer')%>
  </body>
</html>
