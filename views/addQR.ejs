<!DOCTYPE html>
<html lang="id">
<%- include('header') %>
<body class="min-h-screen flex flex-col bg-gray-100">
  <main class="flex-grow flex justify-center items-center p-6">
    <div class="bg-white shadow-md w-[600px] p-6 rounded-lg">
      <h2 class="text-2xl font-bold mb-4 text-center text-gray-800">Tambah Tanaman</h2>
      <form id="tanamanForm" class="space-y-4" enctype="multipart/form-data">
        <div>
          <label class="block text-sm font-medium text-gray-700">Nama Tanaman</label>
          <input type="text" name="nama" class="w-full p-2 border border-green-500 rounded focus:outline-none focus:ring focus:ring-green-700" required>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Lokasi</label>
          <input type="text" name="lokasi" class="w-full p-2 border border-green-500 rounded focus:outline-none focus:ring focus:ring-green-700" required>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Deskripsi</label>
          <textarea 
            name="deskripsi" 
            class="w-full p-2 border border-green-500 rounded focus:outline-none focus:ring focus:ring-green-700" 
            rows="6"
            style="min-height: 150px;"
            required></textarea>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Foto</label>
          <input type="file" name="foto" id="foto" class="w-full p-2 border border-green-500 rounded focus:outline-none focus:ring focus:ring-green-700">
        </div>
        <button type="submit" id="submitButton" class="w-full bg-green-700 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">
          Simpan
        </button>
      </form>
    </div>
  </main>

  <!-- Modal -->
  <div id="qrcodeModal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black bg-opacity-50">
    <div class="bg-white shadow-lg w-[400px] p-6 rounded-lg">
      <h3 class="font-bold text-lg text-center text-gray-800">Tanaman Berhasil Ditambahkan</h3>
      <img id="qrcodeImage" src="" alt="QR Code" class="my-4 mx-auto w-40 h-40">
      <button id="downloadQrCode" class="block w-full bg-green-500 text-white font-bold py-2 px-4 text-center rounded hover:bg-green-600">
        Unduh QRCode
      </button>
      <div class="flex justify-center mt-4">
        <button class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded" onclick="closeModal()">Tutup</button>
      </div>
    </div>
  </div>

  <script>
    const form = document.getElementById('tanamanForm');
    const submitButton = document.getElementById('submitButton');
    const modal = document.getElementById('qrcodeModal');
    const qrcodeImage = document.getElementById('qrcodeImage');
    const downloadQrCode = document.getElementById('downloadQrCode');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(form);

      try {
        const response = await fetch('/submit', {
          method: 'POST',
          body: formData,
        });

        const result = await response.json();
        if (result.success) {
          qrcodeImage.src = result.qrcode;
          
          // Set up download handler
          downloadQrCode.addEventListener('click', async () => {
            try {
              const response = await fetch(result.qrcode);
              const blob = await response.blob();
              const url = window.URL.createObjectURL(blob);
              const a = document.createElement('a');
              a.href = url;
              a.download = `${result.nama}.png`; // Gunakan nama tanaman sebagai nama file
              document.body.appendChild(a);
              a.click();
              window.URL.revokeObjectURL(url);
              a.remove();
            } catch (error) {
              console.error('Download error:', error);
              alert('Gagal mengunduh QR Code');
            }
          });
          
          modal.classList.remove('hidden');
          modal.classList.add('flex');
        } else {
          alert(result.message || 'Gagal menyimpan data.');
        }
      } catch (error) {
        console.error(error);
        alert('Terjadi kesalahan.');
      }
    });

    function closeModal() {
      modal.classList.remove('flex');
      modal.classList.add('hidden');
      window.location.href = '/add';
    }
  </script>
</body>
</html>